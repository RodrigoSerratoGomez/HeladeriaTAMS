@model HeladeriaTAMS.Models.Contacto
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto</title>
</head>

<body>
    @{
        ViewData["Title"] = "Contacto";
    }
    
    <h1>@ViewData["Title"]</h1>

    <div>
        <h1 class="display-4">Contactenos</h1>

        <form asp-controller="Contacto" asp-action="Create">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control form-control-sm" type="text" placeholder="Escribe un nombre"
                aria-label=".form-control-sm" />

            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />

            <label asp-for="Subject" class="control-label"></label>
            <input asp-for="Subject" class="form-control" />

            <label asp-for="Comment" class="control-label"></label>
            <input asp-for="Comment" class="form-control" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enviar</button>
            </div>
        </form>
        <h1>@ViewData["Message"]</h1>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>

</html>